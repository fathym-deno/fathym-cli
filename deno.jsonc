{
  "name": "fathym-cli",
  "version": "0.0.0",
  "tasks": {
    "fmt": "deno fmt",
    "lint": "deno lint",
    "test": "deno test"
  },
  "lint": {
    "rules": {
      "tags": ["recommended"],
      "include": ["ban-untagged-todo"]
    }
  },
  "fmt": {
    "indentWidth": 2,
    "lineWidth": 100,
    "proseWrap": "preserve",
    "semiColons": true,
    "singleQuote": true,
    "useTabs": false
  },
  "lock": false
}
